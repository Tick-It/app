<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
		android:clickable="true">
 
    <RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"
		android:layout_marginTop="7dp"
		android:layout_marginBottom="7dp"
		>
		<RelativeLayout
		   android:id="@+id/maincontainer_of_reminder_homepage"
		   android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg" >
        
        <RelativeLayout
            android:id="@+id/container2_of_reminder_homepage"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="#171717"
        android:gravity="center_vertical"
         android:layout_marginBottom="5dp"
        android:typeface="sans"
        android:textSize="25sp"/>
    
    <!--  <TextView
        android:id="@+id/reminder_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="center_vertical"
        android:typeface="sans"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:textColor="#7A7A7A"
        android:layout_below="@+id/reminder_title"/>-->
        
        <TextView
        android:id="@+id/reminder_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="center_vertical"
        android:typeface="sans"
         android:layout_margin="0dp"
        android:layout_below="@+id/reminder_title"
        android:textColor = "#AAAAAA"
        android:textSize="15sp"
        android:paddingRight="5dp"
        android:paddingBottom="12dp"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/reminder_duedate"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="center_vertical|center_horizontal"
        android:layout_toRightOf="@+id/container2_of_reminder_homepage"
        android:typeface="sans"
        android:textColor = "#AAAAAA"
        android:textSize="50sp"/>
 
    
    </RelativeLayout>
   <!--   <View
        	android:id="@+id/home_separator"
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:background="#c0c0c0"
             android:layout_below="@+id/maincontainer_of_reminder_homepage"
             
             android:layout_marginBottom="1dp"/>-->
    
    <RelativeLayout android:id="@+id/container_of_actions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/maincontainer_of_reminder_homepage">
        <Button 
            android:id="@+id/home_done"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_accept"
            android:text=" DONE"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:textColor="#CC4343"
            android:background="@drawable/background_actions"/>
        <RelativeLayout 
            android:id="@+id/home_separator2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/home_done"
            android:background="#FFFFFF">
    
        <View
        	
             android:layout_width="1dp"
             android:layout_height="25dp"
             android:layout_centerVertical="true"
             android:background="#c0c0c0"
             
             
             />
        
        <View
        	
             android:layout_width="1dp"
             android:layout_height="2dp"
             android:layout_alignParentBottom="true"
             android:background="#ccc"
             
             
             
             />
        </RelativeLayout>
        <Button 
            android:id="@+id/home_edit"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_edit"
            android:text="  EDIT"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:textColor="#CC4343"
            android:layout_toRightOf="@+id/home_separator2"
            android:background="@drawable/background_actions_right"/>
        
        
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
