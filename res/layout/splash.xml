<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#C52222" >

    <RelativeLayout
        android:id="@+id/splashcontainer"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#C52222">
    	
   <ImageView 
       android:id="@+id/splashlogo"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:src="@drawable/splashlogo"
       android:layout_centerHorizontal="true"/>
   
   <com.facebook.widget.LoginButton
   android:id="@+id/authButton"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_below="@+id/splashlogo"
   android:layout_centerHorizontal="true" />
   
   <RelativeLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/authButton"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true" >
<Button
      android:id="@+id/loginEmail"
      android:layout_width="110dp"
      android:layout_height="45dp"
      android:text="Log in"
      android:background="@drawable/rounded_left"
      android:drawableLeft="@drawable/email_icon_small"
      android:paddingLeft="10dp"
      android:drawablePadding="5dp"
      android:gravity="center_horizontal|center_vertical"
      android:typeface="sans"
      android:textStyle="bold"
      android:textSize="16sp"
      android:textColor="#FFFFFF"
      />
<TextView 
    android:layout_toRightOf="@+id/loginEmail"
    android:id="@+id/ortext"
    android:layout_width="24dp"
    android:layout_height="45dp"
    android:text=" or "
    android:background="@drawable/rounded_center"
    android:gravity="center_vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
      android:typeface="sans"
      android:textStyle="bold"
      android:textSize="16sp"
      android:textColor="#FFFFFF"
    
    />
<Button
      android:id="@+id/createEmail"
      android:layout_width="76dp"
      android:layout_height="45dp"
      android:layout_toRightOf="@+id/ortext"
      android:background="@drawable/rounded_right"
      android:gravity="center_horizontal|center_vertical"
      android:drawablePadding="5dp"
      android:typeface="sans"
      android:textStyle="bold"
      android:textSize="16sp"
      android:textColor="#FFFFFF"
      android:text="Register"
      />
   
   
   </RelativeLayout>
   
  
   
   </RelativeLayout>

</RelativeLayout>
